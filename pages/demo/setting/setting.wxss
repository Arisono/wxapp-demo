/* pages/demo/setting/setting.wxss */

.container {
  background-color: #f8f8f8;
  width: 100%;
}

.avatar {
  width: 100%;
  height: 200px;
  background-color: #00beaf;
}

.flex {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  display: -webkit-flex;
  display: -ms-flex;
}

.avatar image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.userinfo-nickname {
  color: white;
}

.cells {
  width: 100%;
  background-color: #fff;
  margin-top: 16px;
  font-size: 16px;
  border-bottom: 1px solid #dadada;
}

.cell {
  display: flex;
  padding: 10px 10px;
  display: -webkit-flex;
  padding-left: 20px;
  align-items: center;
  justify-content: center;
  display: -ms-flex;
  border-top: 1px solid #dadada;
  box-sizing: border-box;
  background-size: 28px 28px !important
}



.desc {
  font-size: 16px;
  padding-left: 20px;
}

.desc-text {
  display: block;
  font-size: 13px;
  padding-left: 20px;
  color: #999;
}

.cell .cell-bd  {
  flex: 1;
}
.cell-bd{

  border: 1px solid #c8c8cd;
}
.cell-desc{
  height: 100%;
 display: flex;
 padding: 10px;
 align-items: center;
 justify-content: center;
 border: 1px solid #c8c8cd; 
}
.desc-phone{
   font-size: 15px;
   color: #00beaf;
    border: 1px solid blueviolet; 
}
.cell-ft:after {
  content: '';

  display: inline-block;
  align-items: center;
  justify-content: center;
  width: 6px;
  height: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  transform: rotate(45deg);
}
