/* pages/home/home.wxss */

.home_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.binner {
  width: 100%;
  height: 150px;
  box-sizing: border-box;
}

.slide-image {
  width: 100%;
  height: 150px;
}

.services {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid gainsboro;
}

.services .wraper {
  width: 100%;
  margin: 0 auto;
  padding-left: 25px;
  padding-right: 25px;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 5px;
  padding-bottom: 5px;
  width: 19%;
  margin: 7px auto;
  font-size: 12px;
  color: #333;
}

.list image {
  width: 50px;
  height: 50px;
  display: block;
  margin-bottom: 8px;
}

.warp {
  width: 100%;
  height: 100%;
  margin-top: 10px;
}

.cleanitem.flex {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  border-top: 1px solid #dadada;
  background-color: #fff;
  margin-bottom: 10px;
}

.left {
  width: 50%;
  height: auto;
  box-sizing: border-box;
  border-right: 1px solid #dadada;
  border-bottom: 1px solid #dadada;
  padding-top: 20px;
  text-align: center;
}

.right {
  width: 50%;
  height: 100%;
  box-sizing: border-box;
}

.left .title, .right .title {
  display: block;
  font-size: 14px;
  font-weight: 700;
}

.left .desc, .right .desc {
  color: #999;
  font-size: 14px;
}

.left image {
  width: 100%;
  height: 143px;
}

.flex .box image {
  width: 35px;
  height: 35px;
  display: inline-block;
}

.flex.box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 20px 10px 20px 10px;
  border-bottom: 1px solid #dadada;
}

.flex-auto {
  flex: 1;
}

.flex-auto .title {
  color: #6cd01b;
}
